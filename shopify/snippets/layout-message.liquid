{% case type %}
  {% when 'error' %}
    {% assign notification_type_class = 'bg-red-100 border-red-500 text-red-800' %}
  {% when 'warning' %}
    {% assign notification_type_class = 'bg-yellow-100 border-yellow-500 text-yellow-800' %}
  {% when 'success' %}
    {% assign notification_type_class = 'bg-green-100 border-green-500 text-green-800' %}
  {% else %}
    {% assign notification_type_class = 'bg-blue-100 border-blue-500 text-blue-800' %}
{% endcase %}

<div class="border-l-2 p-4 {{ notification_type_class }} {{ class | default: '' }}" style="{{ style | default: '' }}">
  {{ text }}
</div>