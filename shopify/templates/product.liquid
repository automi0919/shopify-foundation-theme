{% assign current_variant = product.selected_or_first_available_variant %}
{% assign featured_image = current_variant.featured_image | default: product.featured_image %}

<div class="container max-w-screen-xl grid grid-cols-2 gap-8">
  <div>
    <v-lazy-image
      src="{{ featured_image | img_url: '750x' }}"
      src-placeholder="{{ featured_image | img_url: '50x' }}"
      alt="{{ featured_image.alt | escape }}"
      class="w-full h-auto object-cover object-center"
    ></v-lazy-image>

    <div class="flex gap-4 mt-4">
      {% for image in product.images %}
        <div class="w-24 h-24">
          <v-lazy-image
            sizes="
              (min-width: 768px) 450px,
              200px
            "
            srcset="
              {{ image.src | img_url: '200x' }} 200w,
              {{ image.src | img_url: '450x' }} 450w
            "
            src="{{ image.src | img_url: '400x' }}"
            src-placeholder="{{ image.src | img_url: '50x' }}"
            alt="{{ image.alt | escape }}"
            class="w-full h-full object-cover object-center"
          ></v-lazy-image>
        </div>
      {% endfor %}
    </div>
  </div>

  <div class="mt-12">
    {% if product.title %}
      <h1 class="text-2xl lg:text-3xl font-bold mb-8">
        {{ product.title }}
      </h1>
    {% endif %}

    {% if product.available %}
      <div class="flex">
        <span class="{% if product.compare_at_price %}text-red-500{% endif %}">
          {{ product.price | money }}
        </span>

        {% if product.compare_at_price %}
          <del class="ml-2">
            {{ product.compare_at_price | money }}
          </del>

          <div class="bg-red-500 text-white text-sm tracking-wider uppercase px-2 py-1">
            sale
          </div>
        {% endif %}
      </div>
    {% else %}
      <div>
        Sold out
      </div>
    {% endif %}

    {% form 'product', product %}
      <input
        type="number"
        name="quantity"
        value="1"
        min="1"
        pattern="[0-9]*"
      >

      <div class="{% unless product.variants.size > 1 %}hidden{% endunless %}">
        <select name="id">
          {% for variant in product.variants %}
            {% if variant.available %}
              <option value="{{ variant.id }}">
                {{ variant.title }} - {{ variant.price | money_with_currency }}
              </option>
            {% else %}
              <option disabled="disabled">
                {{ variant.title }} - Sold out
              </option>
            {% endif %}
          {% endfor %}
        </select>
      </div>

      <div class="grid grid-cols-2 gap-4">
        <div>
          {{ form | payment_button }}
        </div>

        <button name="add" class="button button-secondary">
          Add to cart
        </button>
      </div>
    {% endform %}

    {% if product.description %}
      <p class="mt-16">
        {{ product.description }}
      </p>
    {% endif %}
  </div>
</div>