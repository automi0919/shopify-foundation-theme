<div class="container">
  <h1 class="text-2xl lg:text-3xl font-bold text-center mb-8">
    {{ shop.name }}
  </h1>

  <div>
    Coming soon
  </div>

  {% form 'storefront_password' %}
    {% if form.errors %}
      {% capture error_text %}
        {{ form.errors | default_errors }}
      {% endcapture%}

      {% render 'layout-message',
        type: 'error'
        text: error_text
        class: 'mb-8'
      %}
    {% endif %}

    <div>
      <label
        for="CustomerPassword"
        class="block"
      >
        Password
      </label>

      <input
        type="password"
        id="CustomerPassword"
        name="customer[password]"
        class="w-full"
        required
      >
    </div>

    <div>
      <button
        type="submit"
        class="button button-primary"
      >
        Enter
      </button>
    </div>
  {% endform %}

  <div>
    Are you the store owner? <a href="/admin">Login here</a>
  </div>
</div>