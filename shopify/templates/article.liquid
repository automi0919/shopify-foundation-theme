<div class="container max-w-screen-md">
  <h1 class="text-2xl lg:text-3xl font-bold text-center mb-8">
    {{ article.title }}
  </h1>

  <div class="text-gray-600 text-sm text-center mb-16">
    {{ article.user.name }} / {{ article.published_at | date }}
  </div>

  {% if article.image %}
    <div class="mb-12">
      <v-lazy-image
        sizes="
          (min-width: 640px) 750px,
          (min-width: 480px) 600px,
          450px
        "
        srcset="
          {{ article | img_url: '450x' }} 450w,
          {{ article | img_url: '600x' }} 600w,
          {{ article | img_url: '750x' }} 750w,
        "
        src="{{ article | img_url: '750x' }}"
        src-placeholder="{{ article | img_url: '50x' }}"
        alt="{{ article.image.alt | escape }}"
        class="w-full"
      ></v-lazy-image>
    </div>
  {% endif %}

  <div>
    {{ article.content }}
  </div>
</div>