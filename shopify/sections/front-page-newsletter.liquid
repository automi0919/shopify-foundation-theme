<div class="container">
  <div class="flex flex-col justify-center items-center">
    <div>
      Our newsletter
    </div>

    <div>
      Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed nam semper dolor at. Nullam arcu, ultrices viverra arcu.
    </div>

    {% form 'customer' %}
      {% if form.errors %}
        {{ form.errors | default_errors }}
      {% endif %}

      {% if form.posted_successfully? %}
        Success
      {% endif %}

      <div>
        <input type="hidden" name="contact[tags]" value="newsletter">

        <div class="flex">
          <input
            type="email"
            placeholder="Email"
            name="contact[email]"
            value="{% if customer.email != blank %}{{ customer.email }}{% endif %}"
            required
          >

          <button>
            Subscribe
          </button>
        </div>
      </div>
    {% endform %}
  </div>
</div>

{% schema %}
{
  "name":"Newsletter",
  "presets": [
    {
      "name": "Newsletter",
      "category": "Forms"
    }
  ]
}
{% endschema %}