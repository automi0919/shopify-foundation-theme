<div class="container mb-12 md:mb-24">
  {% if section.settings.headline %}
    <div class="text-2xl lg:text-3xl font-bold text-center mb-8 md:mb-16">
      {{ section.settings.headline }}
    </div>
  {% endif %}

  <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-x-4 gap-y-12">
    {% for block in section.blocks %}
      {% render 'section-quote',
        text: block.settings.quote-text
        author: block.settings.quote-author
      %}
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "t:sections.quotes.name",
  "settings": [
    {
      "type": "text",
      "id": "headline",
      "label": "t:common.headline",
      "default": "What others say about us"
    }
  ],
  "blocks": [
    {
      "type": "quote",
      "name": "t:sections.quotes.settings.quote",
      "limit": 3,
      "settings": [
        {
          "type": "textarea",
          "id": "quote-text",
          "label": "t:common.text",
          "default": "Add customer reviews and testimonials to showcase your storeâ€™s happy customers."
        },
        {
          "type": "text",
          "id": "quote-author",
          "label": "t:common.author",
          "default": "Author's name"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.quotes.name",
      "category": "Text",
      "blocks": [
        {
          "type": "quote"
        },
        {
          "type": "quote"
        },
        {
          "type": "quote"
        }
      ]
    }
  ]
}
{% endschema %}